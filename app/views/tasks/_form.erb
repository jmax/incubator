<%= form_for resource do |f| %>
  <%= error_messages_for(resource) %>

  <div class="field">
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>

  <div class="action">
    <%= f.submit "Save" %>
  </div>
<% end %>
